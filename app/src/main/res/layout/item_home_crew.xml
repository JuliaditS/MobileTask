<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.Html" />

        <import type="android.os.Build" />

        <variable
                name="clickListener"
                type="android.view.View.OnClickListener" />

        <variable
                name="crew"
                type="com.codelabs.unikomradio.data.model.Crew" />
    </data>

    <LinearLayout
            android:layout_width="@dimen/image_width_thumbnail"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/crew_item_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height_thumbnail"
                android:elevation="3dp"
                android:src="@mipmap/crew_placeholder"
                app:placeholderImage="@mipmap/crew_placeholder"
                app:roundedCornerRadius="12dp"
                android:background="@drawable/background_radius_12dp"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallest_margin"
                android:gravity="center"
                android:text="@{crew.name}"
                android:textStyle="bold" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{crew.role}" />

    </LinearLayout>

</layout>