<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/noresult_thumbnail"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/noresult"
            app:actualImageResource="@drawable/noresult"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/noresult_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/no_result"
            android:textSize="@dimen/font_size_title"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/noresult_thumbnail"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@id/noresult_label"
            android:layout_width="match_parent"
            android:text="@string/no_result_text"
            android:gravity="center"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>