<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin"
        android:background="@color/colored"
        android:paddingTop="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin"
        app:layout_constraintTop_toTopOf="parent" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/home_streaming_play_image_thumbnail"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="@dimen/standard_margin"
            android:src="@drawable/image_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/home_streaming_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginTop="@dimen/smallest_margin"
            android:text="@string/home_streaming_play_title"
            android:textSize="@dimen/font_size_title"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/home_streaming_play_image_thumbnail"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/home_streaming_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin"
            android:text="@string/titleapp"
            app:layout_constraintStart_toEndOf="@id/home_streaming_play_image_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/home_streaming_title"/>

    <ImageView
            android:id="@+id/home_streaming_play_button"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginEnd="@dimen/standard_margin"
            android:src="@mipmap/playbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>