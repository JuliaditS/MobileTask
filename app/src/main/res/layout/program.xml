<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="mListener"
                type="com.codelabs.unikomradio.mvvm.programs.ProgramUserActionListener"/>
        <variable
                name="mViewModel"
                type="com.codelabs.unikomradio.mvvm.programs.ProgramViewModel"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            tools:context=".mvvm.programs.ProgramFragment">
        <ScrollView
                android:id="@+id/program_scrollview"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/program_playradio_layout"
        >

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/program_top_layout"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/program_banner_recyclerview"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="parent"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/program_label_broadcast"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:layout_marginEnd="@dimen/standard_margin"
                        android:textSize="@dimen/font_size_title"
                        android:text="@string/broadcast_today"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/smallest_margin"
                        app:layout_constraintTop_toBottomOf="@id/program_banner_recyclerview"
                />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/program_broadcast_today_recyclerview"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        app:layout_constraintTop_toBottomOf="@+id/program_label_broadcast"/>

                <TextView
                        android:id="@+id/program_label_radio_program"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/smallest_margin"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:textSize="@dimen/font_size_title"
                        android:layout_marginEnd="@dimen/standard_margin"
                        android:text="Radio Program"
                        app:layout_constraintTop_toBottomOf="@id/program_broadcast_today_recyclerview"
                />

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="@dimen/smallest_margin"
                        android:id="@+id/program_programs_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/standard_margin"
                        android:layout_marginEnd="@dimen/standard_margin"
                        app:layout_constraintTop_toBottomOf="@id/program_label_radio_program"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:fresco="http://schemas.android.com/tools"
                android:id="@+id/program_playradio_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:background="@color/colorSecondary"
                android:paddingTop="@dimen/small_margin"
                android:paddingBottom="@dimen/small_margin"
                app:layout_constraintBottom_toBottomOf="parent">

            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/program_playradio_play_image_thumbnail"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="@dimen/standard_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:placeholderImage="@drawable/icon_radiohits"
                    fresco:roundWithOverlayColor="@color/colorPrimary"
                    fresco:roundedCornerRadius="5dp"/>

            <TextView
                    android:id="@+id/program_playradio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginEnd="8dp"
                    android:text="@string/home_streaming_play_title"
                    android:textSize="@dimen/font_size_title"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/program_playradio_play_button"
                    app:layout_constraintStart_toEndOf="@id/program_playradio_play_image_thumbnail"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/program_playradio_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/icon_livestreaming"
                    android:drawablePadding="5dp"
                    android:text="@string/live_streaming"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintEnd_toStartOf="@+id/program_playradio_play_button"
                    app:layout_constraintStart_toEndOf="@id/program_playradio_play_image_thumbnail"
                    app:layout_constraintTop_toBottomOf="@id/program_playradio_title"/>

            <ImageView
                    android:onClick="@{()->mListener.onPlayRadio()}"
                    android:id="@+id/program_playradio_play_button"
                    android:layout_width="@dimen/image_playradio_width_thumbnail"
                    android:layout_height="@dimen/image_playradio_height_thumbnail"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:src="@mipmap/playbutton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>